---
layout: base.njk
---

<article class="prose lg:prose-xl prose-img:rounded-lg mx-auto max-w-[75ch] text-justify p-8">
  <h1>{{ title }}</h1>
  <p class="font-bold" >{{ date | readableDate }}</p>
  <p class="font-bold">{{ content | emojiReadTime }}</p>
  {% if imgUrl %}
    <img src="{{ imgUrl }}" alt="{{ title }}">
  {% endif %}
  {{ content | safe }}
</article>
